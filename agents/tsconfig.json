{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@rd-bedrock-nova/backend/*": ["../backend/*"]
    }
  },
  "references": [
    { "path": "../backend" }
  ],
  "include": [
    "strands/**/*.ts",
    "chat/**/*.ts",
    "file/**/*.ts",
    "bedrock/**/*.ts",
    "tools/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
